<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- .....PRODUCT..... -->
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="product_manager" position="after">
                    <field name="intrastat_id"/>
					<field name="country_origin"/>              
                </field>
	            <field name="sale_ok" position="before">
	        		    <field name="is_accessory_cost" /> 
	        		    <label for="is_accessory_cost"/>	
	            </field>
	            <notebook position="inside">
	            	<label string="Odaberi na koji se račun ovaj trošak odnosi"/>
	            	<page string="Veza na račun" attrs="{'invisible':[('is_accessory_cost','=',False)]}">
	            		<field name="invoice_ids" nolabel="1"/>
	            	</page>
	            </notebook>
            </field>
        </record>

        
    </data>
</openerp>