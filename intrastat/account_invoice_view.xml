<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="account_invoice_form_incoterm" model="ir.ui.view" >
			<field name="name">account_invoice_form_incoterm</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="move_id" position="after">
    				<field name="incoterm" />	
				</field>
				<!-- bole provjeriti uz incoterm?
				<notebook position="inside">
					<page string="Zavisni troskovi" >
						<field name="zavisni_parent_id"/>
						<field name="zavisni_child_ids" nolabel="1" />
					</page>					
				</notebook>
				-->
    		</field>
    	</record>
    	<record id="account_invoice_supplier_form_incoterm" model="ir.ui.view" >
			<field name="name">account_invoice_supplier_form_incoterm</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="period_id" position="after">
    				<field name="incoterm" />	
				</field>
				<notebook position="inside">
					<page string="Zavisni troskovi" >
						<group>
						<field name="dep_cost" nolabel="1" domain="[('is_accessory_cost','=',True)]"/>
						</group>						
						
					</page>					
				</notebook>
    		</field>
    	</record>
    </data>
</openerp>